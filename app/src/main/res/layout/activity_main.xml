<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:text="Math is hard. Espeically when you're sloshed. We are here to help."
            android:textSize="24sp" android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/alignalg" android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.183"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:text="How much was your bill?"
            android:textSize="24sp" android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/alignalg2" android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.363"
            app:layout_constraintHorizontal_bias="0.423"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword|numberDecimal"
            android:ems="10"
            android:id="@+id/amount" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="308dp" android:layout_marginEnd="96dp" android:layout_marginRight="96dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Amount"/>
    <Button
            android:text="Tip"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/tip" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="396dp" android:layout_marginEnd="168dp" android:layout_marginRight="168dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>